<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/main_background"
    tools:context=".auth.register.FaceIdFragment">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:src="@drawable/frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="411dp"
        android:layout_height="452dp"
        android:background="@drawable/background"
        android:backgroundTint="#F2F1F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/face_id_symbol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="239dp"
            android:layout_height="67dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="56dp"
            android:text="Want to enable faceID?"
            android:textColor="@color/button"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="119dp"
            android:text="This helps you login quicker!"
            android:textColor="@color/button"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/ButtonYes"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="137dp"
            android:layout_height="61dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="112dp"
            android:backgroundTint="#4B2C20"
            android:text="Yes"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ButtonNo"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="137dp"
            android:layout_height="61dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="112dp"
            android:backgroundTint="#4B2C20"
            android:text="No"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

